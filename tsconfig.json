{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es7"]
  },
  "include": ["src/**/*", "typings/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
